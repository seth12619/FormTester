<h1>Sample Item Add</h1>

<%= form_with model: @sample_item do |f| %>
  <p>
    <%= f.label :name%>
    <%= f.text_field :name%>
  </p>
  <p>
    <%= f.label :description%>
    <%= f.text_field :description%>
  </p>
  <p>
    <%= f.label :extra_info%>
    <%= f.text_field :extra_info%>
  </p>
  <%= f.submit %>
<%end%>